<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:weightSum="1"
	android:background="#666699">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/title" />
	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:inputType="textMultiLine"
		android:minWidth="10.0dip" android:maxWidth="5.0dip" android:id="@+id/editText1"
		android:scrollHorizontally="false" android:gravity="top"
		android:lines="8">
		<requestFocus></requestFocus>
	</EditText>
	<TableRow android:layout_width="fill_parent" android:id="@+id/tableRow1"
		android:layout_height="wrap_content">
		<ImageButton android:layout_width="wrap_content"
			android:layout_gravity="right" android:layout_height="wrap_content"
			android:onClick="translateClickHandler" android:src="@drawable/icon"
			android:id="@+id/imageButton1">
	 </ImageButton>
	 
	 <ImageButton android:id="@+id/speak_button"
	    android:layout_gravity="right"
	    android:text="Speak to me" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:src="@drawable/speaker" android:onClick="setOnClickListener"/>
			
			
	</TableRow>
	<ImageView android:id="@+id/imageView1" android:src="@drawable/topkenny1"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
	<ImageView android:id="@+id/imageView2" android:src="@drawable/topkenny2"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
</LinearLayout>
